<%- include('partials/header') %>

<main>

    <div class="container-fluid">
        <div class="mb-5">
            <h1 class="display-4 mb-3"><%= familyName %> Family</h1>

           <p class="lead"><%= household %> Household</p>           
        </div>

        <div class="row">
            
                <table class="table table-hover table-bordered profileParentTable">

                    <thead class="bg-dark">
                        <tr>
                            <td class="lead text-light">Parents</td>
                            <td class="lead text-info mt-4"></td>
                            <td class="lead text-info mt-4"></td>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="bg-info text-light">
                            <td></td>
                            <td>Annual Salary</td>
                            <td>Paid Hours Per Week</td>
                        </tr>
                        <tr>
                            <td><%= parent1Name %></td>
                            <td class="my-4">$<%= parent1Salary %></td>
                            <td class="my-4"><%= parent1Hours %></td>
                        </tr>
                        <tr>
                            <td><%= parent2Name %></td>
                            <td class="my-4">$<%= parent2Salary %></td>
                            <td class="my-4"><%= parent2Hours %></td>
                        </tr>
                    </tbody>

                </table>

        </div>


        <div class="row">
   
             
                <table class="table table-hover table-bordered profileKidTable mt-5">
                    <thead class="bg-dark">
                        <tr>
                            <td class="lead text-light">Children</td>
                            <td></td>
                        
                        </tr>
                    </thead>

                    <tbody>
                        <tr class="bg-info text-light">
                            <td></td>
                            <td>Date Of Birth</td>
                        </tr>
                        <tr>
                            <td><%= child1Name %></td>
                            <td><%= child1DOB %></td>                         
                        </tr>
                        <tr>
                            <td><%= child2Name %></td>
                            <td><%= child2DOB %></td>    
                        </tr>
                        <tr>
                            <td><%= child3Name %></td>
                            <td><%= child3DOB %></td>    
                        </tr>
                        <tr>
                            <td><%= child4Name %></td>
                            <td><%= child4DOB %></td>    
                        </tr>
                        <tr>
                            <td><%= child5Name %></td>
                            <td><%= child5DOB %></td>    
                        </tr>
                    </tbody>
                  
                </table>
           
        </div>
    </div>
 
    <a href="/editProfile"><button class="btn btn-lg btn-primary my-5 mr-5">Edit Profile</button></a> 
</main>


<%- include('partials/footer') %>

